---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../../styles/globals.css";
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"snippets">["data"];
const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-gray-50 dark:bg-gray-900 dark:text-gray-50 text-black">
    <Header transition:persist />
    <main class="flex flex-col justify-center px-8 bg-gray-50 dark:bg-gray-900">
      <article
        class="flex flex-col justify-center items-start max-w-2xl mx-auto mb-16 w-full"
      >
        <div class="flex justify-between w-full mb-8">
          <div>
            <h1
              class="font-bold text-3xl md:text-5xl tracking-tight mb-4 text-black dark:text-white"
            >
              {title}
            </h1><p class="text-gray-700 dark:text-gray-300">
              {description}
            </p>
          </div>
          <div class="mt-2 sm:mt-0">
            {
              heroImage && (
                <img
                  alt={title}
                  src={heroImage}
                  width="48"
                  height="48"
                  decoding="async"
                  class="rounded-full"
                  loading="lazy"
                />
              )
            }
          </div>
        </div>
        <div class="prose prose-base dark:prose-invert prose-a:text-blue-600">
          <slot />
        </div>
      </article>
      <Footer />
    </main>
  </body>
</html>
